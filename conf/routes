# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                   controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)

# Story controller CRUD
GET     /api/story/id/:id          controllers.StoryController.getStory(id: java.lang.Long)

GET     /api/story/n/:n          controllers.StoryController.getStories(n: Int)

POST    /api/story          controllers.StoryController.addStory

# User controller CRUD

POST   /api/user/register   controllers.UserController.register

GET    /api/user/login      controllers.UserController.login
